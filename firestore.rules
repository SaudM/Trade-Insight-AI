/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. All data is nested under
 * /users/{userId}, and only the authenticated user with a matching UID can
 * read and write their own data.
 *
 * Data Structure:
 * All data is nested under /users/{userId} to ensure user-level data isolation.
 *  - /users/{userId}: Stores user profile information.
 *  - /users/{userId}/tradeLogs/{tradeLogId}: Stores individual trade log entries.
 *  - /users/{userId}/dailyAnalyses/{dailyAnalysisId}: Stores AI-generated daily analysis.
 *  - /users/{userId}/weeklyReviews/{weeklyReviewId}: Stores weekly review reports.
 *  - /users/{userId}/weeklyReviews/{weeklyReviewId}/weeklyImprovementPlan: Stores weekly improvement plans.
 *  - /users/{userId}/monthlySummaries/{monthlySummaryId}: Stores monthly summary reports.
 *  - /users/{userId}/subscription/current: Singleton document storing the user's current subscription.
 *
 * Key Security Decisions:
 *  - User listing is disallowed to prevent unauthorized enumeration of user accounts.
 *  - Strict ownership is enforced on all write operations to prevent data modification by other users.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by a signed-in user.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the resource.
     * @param {string} userId The user ID to compare against the request's auth UID.
     * @return {bool} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is made by the owner of an existing resource.
     * @param {string} userId The user ID to compare against the resource's userId.
     * @return {bool} True if the user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Enforces ownership for user profile data.
     * @path /users/{userId}
     * @allow (create) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can create their own profile.
     * @allow (get) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can read their profile.
     * @allow (update) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can update their profile.
     * @allow (delete) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can delete their profile.
     * @deny (create) - User with UID ' অন্যUID' cannot create a profile for 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (get) - User with UID ' অন্যUID' cannot read the profile of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (update) - User with UID ' অন্যUID' cannot update the profile of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (delete) - User with UID ' অন্যUID' cannot delete the profile of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces ownership for user subscription data.
     * @path /users/{userId}/subscription/current
     * @allow (create) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can create their own subscription.
     * @allow (get) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can read their subscription.
     * @allow (update) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can update their subscription.
     * @allow (delete) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can delete their subscription.
     * @deny (create) - User with UID ' অন্যUID' cannot create a subscription for 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (get) - User with UID ' অন্যUID' cannot read the subscription of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (update) - User with UID ' অন্যUID' cannot update the subscription of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (delete) - User with UID ' অন্যUID' cannot delete the subscription of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/subscription/current {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces ownership for user order data.
     * @path /users/{userId}/orders/{orderId}
     * @allow (create) - User can create their own orders.
     * @allow (get) - User can read their own orders.
     * @allow (list) - User can list their own orders.
     * @allow (update) - User can update their own orders.
     * @deny (delete) - Orders cannot be deleted for audit purposes.
     * @principle Enforces document ownership for all operations except delete.
     */
    match /users/{userId}/orders/{orderId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if false; // 订单不允许删除，保留审计记录
    }

    /**
     * @description Enforces ownership for trade log entries.
     * @path /users/{userId}/tradeLogs/{tradeLogId}
     * @allow (create) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can create a trade log.
     * @allow (get) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can read their own trade log.
     * @allow (list) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can list their own trade logs.
     * @allow (update) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can update their own trade log.
     * @allow (delete) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can delete their own trade log.
     * @deny (create) - User with UID ' অন্যUID' cannot create a trade log for 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (get) - User with UID ' অন্যUID' cannot read a trade log of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (list) - User with UID ' অন্যUID' cannot list the trade logs of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (update) - User with UID ' অন্যUID' cannot update a trade log of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (delete) - User with UID ' অন্যUID' cannot delete a trade log of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/tradeLogs/{tradeLogId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces ownership for daily analysis reports.
     * @path /users/{userId}/dailyAnalyses/{dailyAnalysisId}
     * @allow (create) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can create a daily analysis report.
     * @allow (get) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can read their own daily analysis report.
     * @allow (list) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can list their own daily analysis reports.
     * @allow (update) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can update their own daily analysis report.
     * @allow (delete) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can delete their own daily analysis report.
     * @deny (create) - User with UID ' অন্যUID' cannot create a daily analysis report for 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (get) - User with UID ' অন্যUID' cannot read a daily analysis report of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (list) - User with UID ' অন্যUID' cannot list the daily analysis reports of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (update) - User with UID ' অন্যUID' cannot update a daily analysis report of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (delete) - User with UID ' অন্যUID' cannot delete a daily analysis report of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/dailyAnalyses/{dailyAnalysisId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces ownership for weekly review reports.
     * @path /users/{userId}/weeklyReviews/{weeklyReviewId}
     * @allow (create) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can create a weekly review report.
     * @allow (get) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can read their own weekly review report.
     * @allow (list) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can list their own weekly review reports.
     * @allow (update) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can update their own weekly review report.
     * @allow (delete) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can delete their own weekly review report.
     * @deny (create) - User with UID ' অন্যUID' cannot create a weekly review report for 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (get) - User with UID ' অন্যUID' cannot read a weekly review report of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (list) - User with UID ' অন্যUID' cannot list the weekly review reports of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (update) - User with UID ' অন্যUID' cannot update a weekly review report of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @deny (delete) - User with UID ' অন্যUID' cannot delete a weekly review report of 'dKA5w1X5uMZUGAMF5GHrYtA6QB82'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/weeklyReviews/{weeklyReviewId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces ownership for weekly improvement plans.
     * @path /users/{userId}/weeklyReviews/{weeklyReviewId}/weeklyImprovementPlan
     * @allow (create) - User with UID 'dKA5w1X5uMZUGAMF5GHrYtA6QB82' can create a weekly improvement plan.
