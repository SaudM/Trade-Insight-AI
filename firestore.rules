rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces access control for user profiles. Only the authenticated user
     *              can read or write their own profile data.
     * @path /users/{userId}
     * @allow (create) - If the authenticated user's UID matches the userId.
     * @allow (get, list, update, delete) - If the authenticated user's UID matches the userId.
     * @deny (create) - If the authenticated user's UID does not match the userId.
     * @deny (get, list, update, delete) - If the authenticated user's UID does not match the userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get: if isOwner(userId);
      allow list: if false; // User listing is not allowed.
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

       /**
        * @description Enforces access control for user subscriptions. Only the authenticated user
        *              can read or write their own subscription data.
        * @path /users/{userId}/subscription/current
        * @allow (create) - If the authenticated user's UID matches the userId.
        * @allow (get, list, update, delete) - If the authenticated user's UID matches the userId.
        * @deny (create) - If the authenticated user's UID does not match the userId.
        * @deny (get, list, update, delete) - If the authenticated user's UID does not match the userId.
        * @principle Enforces document ownership for all operations.
        */
    match /users/{userId}/subscription/current {
       function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get: if isOwner(userId);
      allow list: if false; // Listing subscriptions is not allowed.
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Enforces access control for trade logs. Only the authenticated user
     *              can read or write their own trade log entries.
     * @path /users/{userId}/tradeLogs/{tradeLogId}
     * @allow (create) - If the authenticated user's UID matches the userId.
     * @allow (get, list, update) - If the authenticated user's UID matches the userId.
     * @deny (delete) - Delete operation is not allowed as user requested.
     * @deny (create) - If the authenticated user's UID does not match the userId.
     * @deny (get, list, update) - If the authenticated user's UID does not match the userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/tradeLogs/{tradeLogId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    /**
     * @description Enforces access control for daily analysis reports. Only the authenticated user
     *              can read or write their own analysis reports.
     * @path /users/{userId}/dailyAnalyses/{dailyAnalysisId}
     * @allow (create) - If the authenticated user's UID matches the userId.
     * @allow (get, list, update, delete) - If the authenticated user's UID matches the userId.
     * @deny (create) - If the authenticated user's UID does not match the userId.
     * @deny (get, list, update, delete) - If the authenticated user's UID does not match the userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/dailyAnalyses/{dailyAnalysisId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Enforces access control for weekly review reports. Only the authenticated user
     *              can read or write their own review reports.
     * @path /users/{userId}/weeklyReviews/{weeklyReviewId}
     * @allow (create) - If the authenticated user's UID matches the userId.
     * @allow (get, list, update, delete) - If the authenticated user's UID matches the userId.
     * @deny (create) - If the authenticated user's UID does not match the userId.
     * @deny (get, list, update, delete) - If the authenticated user's UID does not match the userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/weeklyReviews/{weeklyReviewId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Enforces access control for weekly improvement plans. Only the authenticated user
     *              can read or write their own improvement plans.
     * @path /users/{userId}/weeklyReviews/{weeklyReviewId}/weeklyImprovementPlan
     * @allow (create) - If the authenticated user's UID matches the userId.
     * @allow (get, list, update, delete) - If the authenticated user's UID matches the userId.
     * @deny (create) - If the authenticated user's UID does not match the userId.
     * @deny (get, list, update, delete) - If the authenticated user's UID does not match the userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/weeklyReviews/{weeklyReviewId}/weeklyImprovementPlan {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get: if isOwner(userId);
      allow list: if false; // Listing improvement plans is not useful at this path.
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Enforces access control for monthly summary reports. Only the authenticated user
     *              can read or write their own summary reports.
     * @path /users/{userId}/monthlySummaries/{monthlySummaryId}
     * @allow (create) - If the authenticated user's UID matches the userId.
     * @allow (get, list, update, delete) - If the authenticated user's UID matches the userId.
     * @deny (create) - If the authenticated user's UID does not match the userId.
     * @deny (get, list, update, delete) - If the authenticated user's UID does not match the userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/monthlySummaries/{monthlySummaryId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Enforces access control for user orders. Only the authenticated user
     *              can read or write their own orders. Orders cannot be deleted to retain audit trail.
     * @path /users/{userId}/orders/{orderId}
     * @allow (create) - If the authenticated user's UID matches the userId.
     * @allow (get, list, update) - If the authenticated user's UID matches the userId.
     * @deny (delete) - Orders cannot be deleted.
     * @principle Enforces document ownership for all operations except delete.
     */
    match /users/{userId}/orders/{orderId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }
      function isSignedIn() {
        return request.auth != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // 订单不允许删除，保留审计记录
    }
  }
}